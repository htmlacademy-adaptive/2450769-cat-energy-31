{%- extends "./layouts/base.njk" -%}

{%- from "./templates/card.njk" import card with context -%}

{%- set page = {
title: "Каталог продукции",
link: "/catalog",
lang: "ru"
} -%}

{% block main %}
<main class="main-container">

	<h1>{{ page.title }}</h1>

	<section class="main-container__products products">
		<h2 class="products__title">Основные товары</h2>
		{% for product in mainProducts %}
		{{ card(product, "products__item") }}
		{% endfor %}
		{% set showMore = {
		"title": "Показать еще 100500 товаров",
		"description": "На самом деле вкусов гораздо больше!",
		"cta": {
		"text": "Показать все",
		"url": "#"
		}
		} %}
		{{ card(showMore, "card--has-icon products__item") }}
	</section>

	<section class="main-container__products products">
		<h2 class="products__title">Дополнительные товары</h2>
		{% for product in additionalProducts %}
		{{ card(product, "card--view_line products__item") }}
		{% endfor %}
		<div class="products__present present">
			<div class="present__image"></div>
			<div class="present__description">Закажите все и получите чехол для кота в подарок!</div>
		</div>
	</section>

	<form class="main-container__subscription input-form" action="https://echo.htmlacademy.ru/" method="post">
		<fieldset class="input-form">
			<legend class="input-form__title">Акции и новинки</legend>
			<div class="input-form__description">Подпишитесь на наши новости и не пропустите ни одного предложения!</div>
			<div class=" input-form__item">
				<label class="input-form__label" for="e-mail"></label>
				<input class="input-form__content" type="text" name="name" id="e-mail" placeholder="кuklachev@gmail.com">
			</div>
		</fieldset>
		<button class="input-form__button" type="submit">Подписаться</button>
	</form>

</main>
{% endblock %}
