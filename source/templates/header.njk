{% macro header() %}
<header class="main-header">
	<a class="main-header__logo logo" href={{ project.root ~ "/" }}>
		<span class="visually-hidden">logo Сat-energy</span>
		<picture>
			<source type="image/svg+xml" media="(width >= 1280px)" srcset="images/logo-1280.svg">
			<source type="image/svg+xml" media="(width >= 768px)" srcset="images/logo-768.svg">
			<img src="images/logo.svg" srcset="images/logo.svg" width="33" height="38" alt="логотип рисунок.">
		</picture>
		<img src="images/logo-text.svg" srcset="images/logo-text.svg" width="118" height="21" alt="логоти Сat-energy.">
	</a>
	<nav class="main-header__nav main-nav">
		<button class="main-nav__toggle" type="button">
			<span class="visually-hidden">Открыть меню</span>
		</button>
		<div class="main-nav__wrapper">
			<ul class="main-nav__list nav-list">
				{% for link in navLinks %}
				<li class="nav-list__item">
					<a class="nav-list__link" href={{ project.root ~ link.path }} {{ "aria-current=page" if link.path===page.link }}>{{ link.text }}</a>
				</li>
				{% endfor %}
			</ul>
		</div>
	</nav>
</header>
{% endmacro %}
