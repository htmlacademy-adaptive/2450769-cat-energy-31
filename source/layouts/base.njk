{%- from "../templates/header.njk" import header with context -%}
{%- from "../templates/footer.njk" import footer with context -%}

<!DOCTYPE html>
<html class="page" lang="{{ page.lang }}">

<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width,initial-scale=1">
	<title>{{ page.title }} â€” {{ project.name }}</title>
	<link rel="stylesheet" href="{{ project.root }}/styles/styles.css">
	<link rel="icon" href="{{ project.root }}/favicon.ico" sizes="32x32">
	<link rel="icon" href="{{ project.root }}/favicons/icon.svg" type="image/svg+xml">
	<link rel="apple-touch-icon" href="{{ project.root }}/favicons/icon-180.png">
