{
	"name": "cat-energy",
	"private": true,
	"description": "Личный проект «Кэт энерджи» от HTML Academy",
	"type": "module",
	"engines": {
		"node": "^20.13 || >=22.11"
	},
	"packageManager": "pnpm@9.12.3",
	"scripts": {
		"prepare": "git config core.hooksPath .git-hooks || true",
		"start": "gulp",
		"build": "NODE_ENV=production gulp",
		"preview": "pnpm build && browser-sync start -s build/ --cors --no-notify --no-ui",
		"lint": "gulp processMarkup && pnpm --color /^lint:/",
		"lint:spaces": "ec --exclude source/vendor/*",
		"lint:markup": "html-validator --quiet build/**/*.html",
		"lint:html": "linthtml build/**/*.html --config .linthtmlrc",
		"lint:bem": "gulp lintBem --silent",
		"lint:styles": "stylelint \"source/styles/**/*.scss\"",
		"lint:scripts": "eslint",
		"optimize": "pnpm /^optimize:/",
		"optimize:icons": "conjure icons -i source/icons",
		"optimize:images": "conjure images -i source/images -r -m",
		"optimize:favicons": "conjure favicons -p source"
	},
	"devDependencies": {
		"@csstools/postcss-sass": "^5.1.1",
		"@firefoxic/conjure": "^2.1.3",
		"@firefoxic/eslint-config": "^4.0.0",
		"@firefoxic/stylelint-config": "^5.0.0",
		"@htmlacademy/editorconfig-cli": "^3.0.0",
		"@linthtml/linthtml": "^0.10.1",
		"browser-sync": "^3.0.3",
		"browserslist-to-esbuild": "^2.1.1",
		"eslint": "^9.14.0",
		"gulp": "^5.0.0",
		"gulp-esbuild": "^0.12.1",
		"gulp-html-bemlinter": "^5.0.1",
		"gulp-nunjucks": "^6.0.0",
		"gulp-plumber": "^1.2.1",
		"gulp-postcss": "^10.0.0",
		"gulp-rename": "^2.0.0",
		"gulp-stacksvg": "^5.0.1",
		"html-minifier-terser": "^7.2.0",
		"linthtml-config-htmlacademy": "^1.0.25",
		"postcss": "^8.4.47",
		"postcss-import": "^16.1.0",
		"postcss-lightningcss": "^1.0.1",
		"postcss-scss": "^4.0.9",
		"postcss-url": "^10.1.3",
		"stylelint": "^16.10.0",
		"through2": "^4.0.2",
		"w3c-html-validator": "^1.8.2"
	}
}
