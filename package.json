{
	"name": "cat-energy",
	"private": true,
	"description": "Личный проект «Кэт энерджи» от HTML Academy",
	"type": "module",
	"engines": {
		"node": "^18.18 || ^20.9"
	},
	"packageManager": "pnpm@9.1.0",
	"browserslist": [
		"last 2 versions",
		"not dead",
		"not and_uc > 0",
		"not < 0.2%"
	],
	"scripts": {
		"start": "gulp",
		"build": "NODE_ENV=production gulp",
		"preview": "pnpm build && browser-sync start -s build/ --cors --no-notify --no-ui",
		"lint": "gulp processMarkup && pnpm --color /^lint:/",
		"lint:spaces": "ec --exclude source/vendor/*",
		"lint:markup": "html-validator --quiet build/**/*.html",
		"lint:html": "linthtml build/**/*.html --config .linthtmlrc",
		"lint:bem": "gulp lintBem --silent",
		"lint:styles": "stylelint \"source/styles/**/*.scss\"",
		"lint:scripts": "eslint",
		"optimize": "conjure all -i source -r",
		"optimize:icons": "conjure icons -i source/icons",
		"optimize:images": "conjure images -i source/images -r",
		"optimize:favicons": "conjure favicons -i source/favicons -r"
	},
	"devDependencies": {
		"@csstools/postcss-sass": "^5.1.1",
		"@eslint/js": "^9.2.0",
		"@firefoxic/conjure": "^1.0.2",
		"@htmlacademy/editorconfig-cli": "^3.0.0",
		"@linthtml/linthtml": "^0.9.6",
		"@stylistic/eslint-plugin-js": "^2.1.0",
		"@stylistic/stylelint-plugin": "^2.1.2",
		"browser-sync": "^3.0.2",
		"browserslist-to-esbuild": "^2.1.1",
		"eslint": "^9.2.0",
		"globals": "^15.2.0",
		"gulp": "^5.0.0",
		"gulp-esbuild": "^0.12.0",
		"gulp-html-bemlinter": "^4.0.0",
		"gulp-htmlmin": "^5.0.1",
		"gulp-nunjucks": "^6.0.0",
		"gulp-plumber": "^1.2.1",
		"gulp-postcss": "^10.0.0",
		"gulp-rename": "^2.0.0",
		"gulp-stacksvg": "^4.0.0",
		"linthtml-config-htmlacademy": "^1.0.20",
		"postcss": "^8.4.38",
		"postcss-custom-media": "^10.0.6",
		"postcss-import": "^16.1.0",
		"postcss-lightningcss": "^1.0.0",
		"postcss-url": "^10.1.3",
		"stylelint": "^16.5.0",
		"stylelint-config-htmlacademy": "^4.2.1",
		"w3c-html-validator": "^1.8.1"
	}
}
